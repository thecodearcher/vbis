{
    "compilerOptions": {
        "baseUrl":"./src",
        "target": "es2018",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "pretty": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "test/**/**/*.spec.ts",
    ],
}
